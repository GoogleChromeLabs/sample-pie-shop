{
  "name": "pieshop",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "eslint": "^4.11.0",
    "eslint-config-google": "^0.9.1",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.6",
    "firebase-admin": "^5.5.1",
    "firestore-export-import": "^0.1.3",
    "mocha": "^5.2.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "parallelshell": "^3.0.2",
    "supertest": "^3.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-merge": "^4.1.1"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint:eslint": "eslint 'src/**/*.js'",
    "lint:stylelint": "stylelint 'src/**/*.css'",
    "build:static:images": "./tasks/build-static-images.sh",
    "watch:static:images": "./node_modules/.bin/watch 'npm run build:static:images' src/client/images",
    "build:static:styles": "./tasks/build-static-styles.sh",
    "watch:static:styles": "./node_modules/.bin/watch 'npm run build:static:styles' src/client/styles",
    "build:static:scripts": "./tasks/build-static-scripts.sh",
    "watch:static:scripts": "./node_modules/.bin/watch 'npm run build:static:scripts' src/client/js src/shared/js",
    "build:static": "./node_modules/.bin/parallelshell 'npm run build:static:styles' 'npm run build:static:scripts' 'npm run build:static:images'",
    "watch:static": "./node_modules/.bin/parallelshell 'npm run watch:static:scripts' 'npm run watch:static:images'",
    "build:node": "./tasks/build-node-scripts.sh",
    "watch:node": "./node_modules/.bin/watch 'npm run build:node' src/server src/shared/js src/data",
    "build": "npm run clean && ./node_modules/.bin/parallelshell 'npm run build:static' 'npm run build:node'",
    "build:prod": "NODE_ENV=production npm run build",
    "watch": "./node_modules/.bin/parallelshell 'npm run watch:static' 'npm run watch:node'",
    "serve": "npm run build && ./node_modules/.bin/parallelshell 'npm run watch' './node_modules/.bin/nodemon node dist/server/server.js'",
    "serve:prod": "npm run build:prod && node scripts/serve.js",
    "test:node": "./tasks/test-node.sh",
    "test:static": "./node_modules/.bin/karma start",
    "test": "npm run test:node && npm run test:static",
    "tools:import_products": "./node_modules/.bin/babel-node tools/import_products.js"
  },
  "devDependencies": {
    "csv-parse": "^2.0.4",
    "mockery": "^2.1.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "nodemonConfig": {
    "watch": [
      "dist/*"
    ],
    "delay": "2500"
  }
}

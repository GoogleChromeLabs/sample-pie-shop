{
  "name": "pieshop",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "color": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cpx": "^1.5.0",
    "debug": "^3.1.0",
    "eslint": "^4.11.0",
    "eslint-config-google": "^0.9.1",
    "express": "^4.16.2",
    "firebase-admin": "^5.5.1",
    "flags": "^0.1.3",
    "hbs": "^4.0.1",
    "mocha": "^4.0.1",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "parallelshell": "^3.0.2",
    "promise-map-series": "^0.2.3",
    "serve-favicon": "^2.4.5",
    "supertest": "^3.0.0",
    "watch": "^1.0.2",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.1"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "./node_modules/.bin/eslint src/**/*.js",
    "build:static:styles": "./scripts/build-static-styles.sh",
    "watch:static:styles": "./node_modules/.bin/watch 'npm run build:static:styles' src/client/styles",
    "build:static:scripts": "./scripts/build-static-scripts.sh",
    "watch:static:scripts": "./node_modules/.bin/watch 'npm run build:static:scripts' src/client/js src/shared/js",
    "build:static": "./node_modules/.bin/parallelshell 'npm run build:static:styles' 'npm run build:static:scripts'",
    "watch:static": "./node_modules/.bin/parallelshell 'npm run watch:static:styles' 'npm run watch:static:scripts'",
    "build:node:scripts": "./scripts/build-node-scripts.sh",
    "watch:node:scripts": "./node_modules/.bin/watch 'npm run build:node:scripts' src/server/js src/shared/js data",
    "build:node:views": "mkdir -p dist/node/shared && ./node_modules/.bin/cpx 'src/shared/**/*.hbs' dist/node/shared/",
    "watch:node:views": "./node_modules/.bin/watch 'npm run build:node:views' src/shared",
    "build:node": "./node_modules/.bin/parallelshell 'npm run build:node:scripts' 'npm run build:node:views'",
    "watch:node": "./node_modules/.bin/parallelshell 'npm run watch:node:scripts' 'npm run watch:node:views'",
    "build": "npm run clean && ./node_modules/.bin/parallelshell 'npm run build:static' 'npm run build:node'",
    "build:prod": "NODE_ENV=production npm run build",
    "watch": "./node_modules/.bin/parallelshell 'npm run watch:static' 'npm run watch:node'",
    "serve": "./node_modules/.bin/parallelshell 'npm run watch' 'node scripts/serve.js'",
    "serve:prod": "npm run build:prod && node scripts/serve.js",
    "test:node": "./scripts/test-node.sh",
    "test:static": "./node_modules/.bin/karma start",
    "test": "npm run test:node && npm run test:static"
  },
  "devDependencies": {
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0"
  }
}
